<?xml version="1.0" encoding="utf-8" ?>
<Configuration xmlns="https://www.unrealengine.com/BuildConfiguration">
    <!--
        Options are documented here:
        https://dev.epicgames.com/documentation/en-us/unreal-engine/build-configuration-for-unreal-engine#uebuildconfiguration
    -->
    <BuildConfiguration>
        <!--
            Disable UBA, as it's not supported on platforms other than Windows,
            in UE 5.5.x. See:
            https://dev.epicgames.com/documentation/en-us/unreal-engine/horde-unreal-build-accelerator-and-remote-compilation-tutorial-for-unreal-engine
        -->
        <bAllowUBAExecutor>false</bAllowUBAExecutor>
        <bAllowUBALocalExecutor>false</bAllowUBALocalExecutor>
    </BuildConfiguration>

    <ParallelExecutor>
        <!-- Whether to show compilation times along with worst offenders or not. -->
        <bShowCompilationTimes>true</bShowCompilationTimes>
        <!-- Whether to show compilation times for each executed action. -->
        <bShowPerActionCompilationTimes>true</bShowPerActionCompilationTimes>
    </ParallelExecutor>
</Configuration>
